@model List<Hero>
@{
    int counter = 0;
}

<div class="container">
    <div class="d-flex" style="justify-content: space-around; align-items:center">
        <h1>Hero</h1>
        <a class="btn btn-success" asp-action="Create" asp-controller="hero">Create</a>
    </div>


    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">№</th>
                <th scope="col">Id</th>
                <th scope="col">Image</th>
                <th scope="col">TitleUp</th>
                <th scope="col">TitleDown</th>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                counter++;
                <tr>

                    <th scope="row">@counter</th>
                    <td>@Model[i].Id</td>
                    <td>
                    <div style="width:200px">
                        <img style="max-width:100%" src="~/uploads/heroes/@Model[i].ImageUrl " alt="">
                    </div>
                    <td>@Model[i].TitleUp</td>
                    <td>@Model[i].TitleDown</td>
                    <td>@Model[i].Description</td>
                    <td>@Model[i].Price</td>
                    <td>
                        <a class="btn btn-primary" asp-action="edit" asp-controller="hero" asp-route-id="@Model[i].Id">Edit</a>
                    </td>
                    <td>

                        <a class="btn btn-danger" asp-action="delete" asp-controller="hero" asp-route-id="@Model[i].Id">Delete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>